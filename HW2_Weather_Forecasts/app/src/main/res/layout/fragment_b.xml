<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentB">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_name" />

    <TextView
        android:id="@+id/timezone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinates" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Time"
        app:layout_constraintBottom_toBottomOf="@+id/city_name"
        app:layout_constraintEnd_toEndOf="@+id/current_time"
        app:layout_constraintStart_toStartOf="@+id/current_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/timezone"
        app:layout_constraintStart_toEndOf="@+id/coordinates"
        app:layout_constraintTop_toBottomOf="@+id/city_name" />

    <TextView
        android:id="@+id/temperature_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Temperature"
        app:layout_constraintBottom_toBottomOf="@+id/time_label"
        app:layout_constraintEnd_toEndOf="@+id/current_temperature"
        app:layout_constraintStart_toStartOf="@+id/current_temperature"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_temperature"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/current_time"
        app:layout_constraintStart_toEndOf="@+id/current_time"
        app:layout_constraintTop_toTopOf="@+id/current_time"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pressure_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Pressure"
        app:layout_constraintBottom_toBottomOf="@+id/temperature_label"
        app:layout_constraintEnd_toEndOf="@+id/current_pressure"
        app:layout_constraintStart_toStartOf="@+id/current_pressure"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_pressure"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/current_temperature"
        app:layout_constraintStart_toEndOf="@+id/current_temperature"
        app:layout_constraintTop_toTopOf="@+id/current_temperature" />

    <TextView
        android:id="@+id/humidity_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Humidity"
        app:layout_constraintBottom_toBottomOf="@+id/pressure_label"
        app:layout_constraintEnd_toEndOf="@+id/current_humidity"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/current_humidity"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_humidity"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/current_pressure"
        app:layout_constraintStart_toEndOf="@+id/current_pressure"
        app:layout_constraintTop_toTopOf="@+id/current_pressure" />

    <TextView
        android:id="@+id/cloudiness_label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Cloudiness"
        app:layout_constraintBottom_toBottomOf="@+id/humidity_label"
        app:layout_constraintEnd_toEndOf="@+id/current_cloudiness"
        app:layout_constraintStart_toStartOf="@+id/current_cloudiness"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_cloudiness"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/current_humidity"
        app:layout_constraintStart_toEndOf="@+id/current_humidity"
        app:layout_constraintTop_toTopOf="@+id/current_humidity" />

</androidx.constraintlayout.widget.ConstraintLayout>